{
  "manifest_version": 3,
  "name": "TeamMail - Gmail Team Collaboration",
  "version": "0.1.0",
  "description": "Add team collaboration to Gmail with comments and @mentions on any email thread",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "TeamMail - Team Collaboration for Gmail"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.js",
        "icons/*"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}